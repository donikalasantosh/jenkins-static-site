pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/donikalasantosh/jenkins-static-site.git'
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ec2-ssh-key', keyFileVariable: 'SSH_KEY')]) {
                    sh '''
                        scp -o StrictHostKeyChecking=no -i $SSH_KEY -r * ubuntu@54.165.197.171:/var/www/html/
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY ubuntu@54.165.197.171 "sudo systemctl restart nginx"
                    '''
                }
            }
        }
    }
}
